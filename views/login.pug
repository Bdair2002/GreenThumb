extends base

block content
  main.main
    img(src='/img/logo-img.png' alt='GreenThumb logo2') 
    .login-form
      h2.login_text Log into your account
      form.form.form--login
        .form__group
          label.form__label(for='email') Email address
          input#email.form__input(type='email', placeholder='your_email@example.com', required)
        .form__group
          label.form__label(for='password') Password
          input#password.form__input(type='password', placeholder='••••••••', required)
        .form__group
          button#login_primary Login